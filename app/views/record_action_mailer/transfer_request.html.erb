<!DOCTYPE html>
<html lang="<%= @transfer_request_notification.locale %>">
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
  </head>
  <body>
    <p>
      <%= t('email_notification.transfer_request_html',
             user: @transfer_request_notification.transition.transitioned_by,
             agency: @transfer_request_notification.transition&.transitioned_by_user&.agency&.name,
             locale: @transfer_request_notification.locale,
             record_type: t("forms.record_types.#{@transfer_request_notification&.record.class&.parent_form}"),
             record_id: link_to(
                 @transfer_request_notification&.record&.short_id, url_for_v2(@transfer_request_notification&.record)
             )
           ).html_safe
       %>
    </p>
    <p>
      <%= t('email_notification.transfer_request_notes_html',
             request_transfer_notes: @transfer_request_notification.transition&.notes,
             locale: @transfer_request_notification.locale
           ).html_safe
       %>
    </p>
  </body>
</html>
